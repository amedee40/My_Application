<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".AddCarActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="131dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="542dp"
        android:src="@drawable/one" />


    <EditText
        android:id="@+id/car_name"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="242dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="438dp"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="8dp"
        android:hint="Enter Car Name"
        android:padding="8dp"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/car_model"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="318dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="362dp"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="8dp"
        android:hint="Enter Car Model"
        android:padding="8dp"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/car_number"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="390dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="290dp"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="8dp"
        android:textSize="18sp"
        android:hint="Enter Car Number"
        android:padding="8dp"
        />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="271dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="483dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="200dp"
        android:textSize="18sp"
        android:text="Switch On Location" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="563dp"
        android:layout_marginEnd="105dp"
        android:textSize="20sp"
        android:layout_marginBottom="109dp"
        android:text="Add" />



</RelativeLayout>